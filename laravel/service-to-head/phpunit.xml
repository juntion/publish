<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
        <testsuite name="Base">
            <directory suffix="Test.php">./Modules/Base/Tests</directory>
        </testsuite>
        <testsuite name="Admin">
            <directory suffix="Test.php">./Modules/Admin/Tests</directory>
        </testsuite>
        <testsuite name="Customer">
            <directory suffix="Test.php">./Modules/Customer/Tests</directory>
        </testsuite>
        <testsuite name="Permission">
            <directory suffix="Test.php">./Modules/Permission/Tests</directory>
        </testsuite>
        <testsuite name="Route">
            <directory suffix="Test.php">./Modules/Route/Tests</directory>
        </testsuite>
        <testsuite name="Finance">
            <directory suffix="Test.php">./Modules/Finance/Tests</directory>
        </testsuite>
        <testsuite name="Share">
            <directory suffix="Test.php">./Modules/Share/Tests</directory>
        </testsuite>
        <testsuite name="Tag">
            <directory suffix="Test.php">./Modules/Tag/Tests</directory>
        </testsuite>
        <testsuite name="ERP">
            <directory suffix="Test.php">./Modules/ERP/Tests</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./app</directory>
        </include>
    </coverage>
    <php>
        <server name="APP_ENV" value="testing"/>
        <server name="BCRYPT_ROUNDS" value="4"/>
        <server name="CACHE_DRIVER" value="array"/>
        <!-- <server name="DB_CONNECTION" value="sqlite"/> -->
        <!-- <server name="DB_DATABASE" value=":memory:"/> -->
        <server name="MAIL_MAILER" value="log"/>
        <server name="MAIL_LOG_CHANNEL" value="mail_log"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="TELESCOPE_ENABLED" value="false"/>
        <server name="BROADCAST_DRIVER" value="log"/>
        <server name="LOG_CHANNEL" value="test_log"/>
    </php>
</phpunit>
